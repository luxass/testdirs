{
  "name": "testdirs",
  "version": "3.0.0",
  "description": "A utility to create isolated test directories",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/testdirs.git"
  },
  "keywords": [
    "testdirs"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./helpers": "./dist/helpers.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^5.2.5",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "publint": "^0.3.12",
    "tsdown": "^0.13.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
