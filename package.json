{
  "name": "testdirs",
  "version": "4.0.0",
  "description": "A utility to create isolated test directories",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.28.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/testdirs.git"
  },
  "keywords": [
    "testdirs"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./factory": "./dist/factory.mjs",
    "./helpers": "./dist/helpers.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^6.0.3",
    "@types/node": "^22.18.11",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "publint": "^0.3.17",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
